<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="right"
    tools:context="com.example.adacher.shrinkquizz.MatchFragment">

    <TextView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cuál es tu edad?"/>

    <SeekBar
        android:id="@+id/userSb"
        android:max="120"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/userTv"
        android:text="0"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cuál es la edad de tu pareja?"/>

    <SeekBar
        android:id="@+id/loverSb"
        android:max="120"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/loverTv"
        android:text="0"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/matchBtn"
        android:text="ENVIAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
